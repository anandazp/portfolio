---
const {
  variant = "primary",
  label,
  type = "button",
  href,
  target = null
} = Astro.props;

const base =
  "inline-flex items-center justify-center rounded px-4 py-2";

const style =
  variant === "primary"
    ? "bg-blackdark text-whitelight"
    : "bg-whitelight text-blackdark border border-blackdark";
---
{href ? (
  <a href={href} target={target} class={`${base} ${style}`}>
    {label}
    <slot/>
  </a>
) : (
  <button type={type} class={`${base} ${style}`}>
    {label}
  </button>
)}
