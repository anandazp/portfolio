---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Section from "../components/Section.astro";
import Button from "../components/ui/Button.astro";
import MiniCard from "../components/ui/MiniCard.astro";
import Card from "../components/ui/Card.astro";

const projects = await getCollection("projects");

const skillsAndTools = [
  "Javascript",
  "Tailwind CSS",
  "PHP",
  "Laravel",
  "Astro",
  "MySQL",
  "Git",
  "GitHub",
];

const contacts = [
  {
    platform: "Email",
    url: "mailto:anandazulvansyahputra@gmail.com",
  },
  {
    platform: "GitHub",
    url: "https://github.com/anandazp",
  },
  {
    platform: "Threads",
    url: "https://threads.com/@azura.van5",
  },
  {
    platform: "Facebook",
    url: "https://facebook.com/azura.van5",
  },
];
---

<BaseLayout title="Ananda ZP - Web Developer">
  <Header />
  <main class="relative">
    <!-- Hero -->
    <section
      class="h-screen px-5 md:px-10 text-blackdark flex flex-col items-center justify-center text-center lg:text-left space-y-5"
      id="home"
    >
      <div class="grid grid-cols-1 md:grid-cols-2 items-center gap-3">
        <div class="grid justify-center">
          <Image
            src="/avatar.svg"
            alt="avatar"
            width={320}
            height={320}
            loading={"lazy"}
            class="rounded-full border-4 border-blackdark"
          />
        </div>

        <div class="space-y-3">
          <h1 class="text-4xl lg:text-8xl font-semibold mb-1">Ivan</h1>
          <h2 class="text-xl lg:text-2xl">
            Web Developer <br /> from Pasuruan, Indonesia.
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
            <Button
              href="#projects"
              variant="secondary"
              label="View My Works"
            />
            <Button
              href="mailto:anandazulvansyahputra@gmail.com"
              variant="primary"
              label="Send Message"
              target="_blank"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="22"
                height="22"
                fill="#fafafa"
                viewBox="0 0 256 256"
                class="mr-1"
                ><path
                  d="M225.88,30.12a13.83,13.83,0,0,0-13.7-3.58l-.11,0L20.14,84.77A14,14,0,0,0,18,110.85l85.56,41.64L145.12,238a13.87,13.87,0,0,0,12.61,8c.4,0,.81,0,1.21-.05a13.9,13.9,0,0,0,12.29-10.09l58.2-191.93,0-.11A13.83,13.83,0,0,0,225.88,30.12Zm-8,10.4L159.73,232.43l0,.11a2,2,0,0,1-3.76.26l-40.68-83.58,49-49a6,6,0,1,0-8.49-8.49l-49,49L23.15,100a2,2,0,0,1,.31-3.74l.11,0L215.48,38.08a1.94,1.94,0,0,1,1.92.52A2,2,0,0,1,217.92,40.52Z"
                ></path></svg
              >
            </Button>
          </div>
        </div>
      </div>
    </section>

    <!-- About Me -->
    <Section
      title="About Me"
      id="about"
      extraClasses="bg-whitelight text-blackdark"
      extraClassesTitle="border-blackdark"
    >
      <p class="font-inter text-4xl py-2">
        My name is <span class="italic bg-blackdark text-whitelight"
          >Ananda Zulvansyah Putra</span
        > , and you can call me
        <span class="font-semibold">Ivan.</span>
      </p>
      <p class="font-inter text-4xl">
        I'm a web developer who enjoy turning ideas into <span
          class="bg-blackdark text-whitelight"
          >functional and user-friendly</span
        >
        website. I work primarly with <span class="font-semibold">Astro</span>
        and
        <span class="font-semibold">Tailwind CSS</span>.
      </p>
    </Section>

    <!-- Skills -->
    <Section
      title="Skills & Tools"
      id="skills"
      extraClasses="bg-blackdark text-whitelight"
      extraClassesTitle="border-whitelight"
    >
      {
        skillsAndTools.map((s) => (
          <div>
            <p class="text-4xl">{s}</p>
            <hr />
          </div>
        ))
      }
    </Section>

    <!-- Projects -->

    <Section
      id="projects"
      title="Projects"
      extraClasses="top-60 bg-white-light text-blackdark"
    >
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-5">
        {
          projects.map((project) => (
            <Card
              src={project.data.image}
              alt={project.data.alt}
              title={project.data.title}
              description={project.data.description}
            >
              <div class="grid grid-cols-2 gap-2">
                <Button
                  href={`/projects/${project.slug}`}
                  variant="secondary"
                  label="View Details"
                />
                <Button
                  href={project.data.projectURL}
                  target="_blank"
                  variant="primary"
                  label="Visit Site"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    fill="#fafafa"
                    viewBox="0 0 256 256"
                    class="mr-1"
                  >
                    <path d="M200,64V168a8,8,0,0,1-16,0V83.31L69.66,197.66a8,8,0,0,1-11.32-11.32L172.69,72H88a8,8,0,0,1,0-16H192A8,8,0,0,1,200,64Z" />
                  </svg>
                </Button>
              </div>
            </Card>
          ))
        }
      </div>
    </Section>

    <Section
      id="contact"
      title="Get In Touch"
      subtitle="Feel free to reach out"
      extraClasses="top-100 bg-blackdark text-whitelight"
    >
      <!-- Mobile and Tablet -->
      <div class="mt-6 space-y-3">
        {
          contacts.map((contact) => (
            <a
              href={contact.url}
              target="_blank"
              class="block text-xl hover:border-b hover:border-b-whitelight active:border-b-whitelight"
            >
              {contact.platform}
            </a>
            // <hr/>
          ))
        }
      </div>

      <h1 class="text-6xl font-semibold">Ananda Zulvansyah Putra</h1>
    </Section>
  </main>
</BaseLayout>
